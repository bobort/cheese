#!/bin/bash

NAME="cheese"
DIR=/home/mouser/cheese
USER=mouser
GROUP=mouser
WORKERS=3
BIND=unix:/home/mouser/cheese/run/gunicorn.sock
DJANGO_SETTINGS_MODULE=cheese.settings
DJANGO_WSGI_MODULE=cheese.wsgi
LOG_LEVEL=error

cd $DIR

export DJANGO_SETTINGS_MODULE=$DJANGO_SETTINGS_MODULE
export PYTHONPATH=$DIR:$PYTHONPATH

exec /home/mouser/.local/share/virtualenvs/cheese-akH0yNvL/bin/gunicorn ${DJANGO_WSGI_MODULE} \
  --name $NAME \
  --workers $WORKERS \
  --user=$USER \
  --group=$GROUP \
  --bind=$BIND \
  --log-level=$LOG_LEVEL \
  --log-file=-
